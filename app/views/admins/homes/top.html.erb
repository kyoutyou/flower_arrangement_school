<div class="w-50 mx-auto">
  <h8>会員一覧</h8>
  <table class="table tabli-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td>
          <%= link_to admins_user_path(user.id) do %>
            <%= user.first_name %>
            <%= user.last_name %>
          <% end %>
        </td>
        <td><%= user.email %></td>
        <td>
          <% if user.is_deleted %>
          退会
          <% else %>
         有効
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>